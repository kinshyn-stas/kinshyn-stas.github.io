  <div class="panel-heading"><i class="fa fa-search" aria-hidden="true"></i> {{ heading_title }}</div>
  <div class="list-group">
    <div class="list-group-item">
      <div id="{{ _code }}-search" class="input-group">
        <input type="text" name="search" value="{{ search }}" placeholder="{{ text_search }}" class="form-control"/>
        <span class="input-group-btn">
          <button type="button" class="btn btn-default"><i class="fa fa-search"></i></button>
        </span>
      </div>
    </div>
  </div>
  <script>
    $('#{{ _code }}-search-block-{{ module_id }} input[name=\'search\']').parent().find('button').on('click', function () {
      url = $('base').attr('href') + 'index.php?route=extension/ocdevwizard/{{ _name }}/search';

      var value = $('#{{ _code }}-search-block-{{ module_id }} input[name=\'search\']').val();

      if (value) {
        url += '&{{ _code }}_search=' + encodeURIComponent(value);
      }

      location = url;
    });

    $('#{{ _code }}-search-block-{{ module_id }} input[name=\'search\']').on('keydown', function (e) {
      if (e.keyCode == 13) {
        $('#{{ _code }}-search-block-{{ module_id }} input[name=\'search\']').parent().find('button').trigger('click');
      }
    });
  </script>
</div>