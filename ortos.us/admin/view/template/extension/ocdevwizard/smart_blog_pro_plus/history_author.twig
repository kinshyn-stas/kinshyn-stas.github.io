{% if (histories) %}
  <div class="btn-group">
    <button type="button" class="btn btn-warning dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
      <i class="fa fa-trash-o"></i> {{ button_delete_menu }} <span class="caret"></span>
    </button>
    <ul class="dropdown-menu" role="menu">
      <li><a onclick="delete_all('author');">{{ button_delete_all }}</a></li>
      <li><a onclick="delete_all_selected('author');">{{ button_delete_selected }}</a></li>
    </ul>
  </div>
{% endif %}
<button type="button" onclick="$('a[href=#author-constructor-block]').click();" class="btn btn-primary"><i class="fa fa-refresh"></i> {{ button_update }}</button>
<button type="button" onclick="open_author();" class="btn btn-primary"><i class="fa fa-plus-circle"></i> {{ button_add_author }}</button>
<div class="special-margin"></div>
<div class="table-responsive">
  <table class="table table-bordered main-table-data">
    <thead>
      <tr>
        <td width="1" style="text-align: center;"><input type="checkbox" onclick="$('#history-author input[name*=\'selected\']').attr('checked', this.checked);" /></td>
        <td class="text-left" width="15%">{{ column_heading }}</td>
        <td class="text-left">{{ column_date_added }}</td>
        <td class="text-left">{{ column_date_modified }}</td>
        <td class="text-left">{{ column_status }}</td>
        <td class="text-center">{{ column_action }}</td>
      </tr>
      <tr>
        <td class="text-center fixed-thead"></td>
        <td class="text-center fixed-thead input-group-sm"><input type="text" name="filter_name" value="" class="form-control"/></td>
        <td class="text-center fixed-thead input-group-sm"><input type="text" name="filter_date_added" value="" class="form-control datetime"/></td>
        <td class="text-center fixed-thead input-group-sm"><input type="text" name="filter_date_modified" value="" class="form-control datetime"/></td>
        <td class="text-center fixed-thead input-group-sm">
          <select name="filter_status" class="form-control">
            <option value="*"></option>
            <option value="1">{{ text_enabled }}</option>
            <option value="0">{{ text_disabled }}</option>
          </select>
        </td>
        <td class="text-center fixed-thead">
          <button class="btn btn-default btn-sm" type="button" id="submit-filter-author-form"><i class="fa fa-search"></i> {{ button_filter }}</button>
          <button class="btn btn-default btn-sm" type="button" id="clear-filter-author-form"><i class="fa fa-eraser"></i> {{ button_clear_filter }}</button>
        </td>
      </tr>
    </thead>
    <tbody>
    {% if (histories) %}
      {% for history in histories %}
      <tr>
        <td style="text-align: center;"><input type="checkbox" name="selected[]" value="{{ history['author_id'] }}" /></td>
        <td class="text-left">{{ history['heading'] }}</td>
        <td class="text-left">{{ history['date_added'] }}</td>
        <td class="text-left">{{ history['date_modified'] }}</td>
        <td class="text-left">{{ history['status'] }}</td>
        <td class="text-center">
          <button type="button" class="btn btn-primary" onclick="open_author({id: '{{ history['author_id'] }}'});" data-toggle="tooltip" title="" data-original-title="{{ button_edit }}"><i class="fa fa-pencil"></i></button>
          <a onclick="confirm('{{ text_are_you_sure }}') ? delete_selected('author', '{{ history['author_id'] }}') : false;" data-toggle="tooltip" title="" class="btn btn-warning" data-original-title="{{ button_delete }}"><i class="fa fa-trash-o"></i></a>
          <button type="button" class="btn btn-default" onclick="confirm('{{ text_are_you_sure }}') ? copy_selected('author', '{{ history['author_id'] }}') : false;" data-toggle="tooltip" title="" data-original-title="{{ button_copy }}"><i class="fa fa-copy"></i></button>
        </td>
      </tr>
      {% endfor %}
      {% else %}
        <tr>
          <td class="text-center" colspan="6">{{ text_no_results }}</td>
        </tr>
      {% endif %}
    </tbody>
    <tfoot>
      <tr>
        <td colspan="6">
          <div class="row">
            <div class="col-sm-6 text-left">{{ pagination }}</div>
            <div class="col-sm-6 text-right fixed-pagination-results">{{ results }}</div>
          </div>
        </td>
      </tr>
    </tfoot>
  </table>
</div>
<script type="text/javascript">
  $('#history-author input[name=\'filter_name\']').autocomplete({
    'source': function(request, response) {
      $.ajax({
        url: 'index.php?route=extension/ocdevwizard/{{ _name }}/autocomplete_author&{{ token }}&filter_name='+encodeURIComponent(request),
        dataType: 'json',
        success: function(json) {
          response($.map(json, function(item) {
            if (item['author_id']) {
              return {
                value: item['author_id'],
                label: item['name']
              }
            } else {
              return {
                label: '{{ text_none }}',
                value: 0
              }
            }
          }));
        }
      });
    },
    'select': function(item) {
      $('#history-author input[name=\'filter_name\']').val(item['label']);
    }
  });

  $('#history-author .datetime').datetimepicker({
    format:     'YYYY-MM-DD',
    formatDate: 'YYYY-MM-DD',
  });
</script>